@model WebsiteNoiThat.Models.UserModelView

@{
    ViewBag.Title = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Chỉnh Sửa Khách Hàng </h2>

