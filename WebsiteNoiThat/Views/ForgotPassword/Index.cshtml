@model WebsiteNoiThat.Models.ForgotPasswordModel
@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Quên mật khẩu</title>

    <!-- Bootstrap + Font -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        body {
            background: url('/Content/admin/img/noithat.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Inter', sans-serif;
        }

        .overlay {
            background-color: rgba(0, 0, 0, 0.6);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .forgot-card {
            background: rgba(45, 45, 45, 0.8);
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 420px;
            color: #fff;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
        }

        .forgot-header {
            font-size: 28px;
            font-weight: 600;
            margin-bottom: 24px;
            text-align: center;
        }

        .form-control {
            border-radius: 10px;
            padding: 12px;
            background-color: rgba(255, 255, 255, 0.2);
            color: #fff;
            border: none;
        }

            .form-control::placeholder {
                color: #eee;
            }

            .form-control:focus {
                box-shadow: none;
                border: 1px solid #fff;
            }

        .btn-primary {
            background-color: #00bcd4;
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #0097a7;
            }

        .text-danger {
            color: #ffcdd2 !important;
        }

        .alert-info {
            background-color: #0097a7;
            color: white;
            border-radius: 10px;
            padding: 10px 15px;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .text-link a {
            display: block;
            margin-top: 12px;
            color: #00bcd4;
            text-decoration: none;
            text-align: center;
            font-size: 14px;
        }

            .text-link a:hover {
                text-decoration: underline;
            }




        label {
            font-weight: 600;
        }
    </style>
</head>
<body>
    <div class="overlay">
        <div class="forgot-card">
            <div class="forgot-header">Lấy lại mật khẩu</div>

            @using (Html.BeginForm("Index", "ForgotPassword", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                if (ViewBag.Message != null)
                {
                    <div class="alert-info">@ViewBag.Message</div>
                }

                <div class="mb-3">
                    @Html.LabelFor(model => model.Email)
                    @Html.TextBoxFor(model => model.Email, new { @class = "form-control", @placeholder = "Nhập email của bạn", @required = "required" })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Gửi yêu cầu</button>
                </div>
                <div class="text-center mt-3 text-link">
                    <a href="/RegisterAndLogin/Login">

                        Quay lại đăng nhập
                    </a>
                </div>
            }
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
