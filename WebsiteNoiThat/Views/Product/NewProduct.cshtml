@model  List<Models.EF.Product>

<link href="~/Content/css/style.css" rel="stylesheet" />

<h3 id="title_spmoi">SẢN PHẨM MỚI</h3>

<div class="row">
    <div id="spmoi" class="owl-carousel">
        @{ int i = 0;
            foreach (var sp in Model.Where(x => x.IsVisible))
            {
                i++;
                    <div class="item">
                                <div class="boxsp">
                                    <div class="imgsp">
                                        <a href="@Url.Action("DetailProduct", new { @Id = sp.ProductId })" data-toggle="tooltip" title="@sp.Name"><img class="imgproduct" style="width:150px;height:200px;" src="@Url.Content("~/image/" + sp.Photo)"></a>
                                        <div class="img-label">
                                            <img src="~/image/hot.png">
                                        </div>
                                    </div>
                                    <div class="namesp">
                                        <a href="">@sp.Name</a>
                                    </div>
                                    <div class="pricesp">@sp.Price.GetValueOrDefault(0).ToString("N0")₫</div>
                                    <div class="button-hd">
                                        @if (sp.Quantity > 0)
                                        {
                                            <a href="/them-gio-hang?ProductId=@sp.ProductId&quantity=1" title="Thêm vào giỏ hàng"><i class="fa fa-shopping-cart" aria-hidden="true"></i></a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-secondary" disabled title="Hết hàng"><i class="fa fa-shopping-cart" aria-hidden="true"></i></button>
                                        }
                                    </div>

                                </div>
                    </div>
                
                if (i % 4 == 0)
                {
                        <div style="clear:both;"></div>
                    }



                }
        }

    </div>
    </div>
