    <script type="text/javascript">
        $(document).ready(function () {
            var stt = 0;
            var imgs = $("img.slider");
            var lastIndex = imgs.length - 1;
            var intervalTime = 3000;
            var slideInterval;

            function showSlide(index) {
                imgs.removeClass("active").hide();
                imgs.eq(index).addClass("active").fadeIn(800);
            }

            function startSlider() {
                slideInterval = setInterval(function () {
                    stt = (stt >= lastIndex) ? 0 : stt + 1;
                    showSlide(stt);
                }, intervalTime);
            }

            function resetSlider() {
                clearInterval(slideInterval);
                startSlider();
            }

            $("#next").click(function (e) {
                e.preventDefault();
                stt = (stt >= lastIndex) ? 0 : stt + 1;
                showSlide(stt);
                resetSlider();
            });

            $("#prev").click(function (e) {
                e.preventDefault();
                stt = (stt <= 0) ? lastIndex : stt - 1;
                showSlide(stt);
                resetSlider();
            });

            // Bắt đầu tự động chuyển ảnh
            startSlider();
        });
    </script>


