@{
    ViewBag.Title = "ChatBot - Gợi ý sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml";  // dùng layout sẵn có
}
<style>
    #chat-container {
        border: 1px solid #ddd;
        border-radius: 8px;
        padding: 20px;
        margin-top: 30px;
        background-color: #fff;
    }

    #chat-box {
        height: 300px;
        overflow-y: auto;
        border: 1px solid #ccc;
        padding: 10px;
        background: #f8f8f8;
        border-radius: 5px;
        margin-bottom: 15px;
    }

    .message {
        margin: 5px 0;
    }

    .user-msg {
        text-align: right;
        color: #007bff;
        font-weight: bold;
    }

    .bot-msg {
        text-align: left;
    }

    .product-card {
        display: inline-block;
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px;
        margin: 5px;
        width: 180px;
        background: #fff;
    }

        .product-card img {
            width: 100%;
            height: 120px;
            object-fit: cover;
            border-radius: 5px;
            margin-bottom: 5px;
        }

    .product-name {
        font-weight: bold;
        font-size: 14px;
    }

    .product-price {
        color: green;
        font-size: 13px;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8" id="chat-container">
            <h4>💬 ChatBot Gợi ý sản phẩm</h4>
            <div id="chat-box"></div>

            <div class="input-group">
                <input type="text" id="user-input" class="form-control" placeholder="Nhập yêu cầu của bạn...">
                <div class="input-group-append">
                    <button class="btn btn-primary" onclick="sendMessage()">Gửi</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section jsFooter {
    <script>
        function sendMessage() {
            const message = $('#user-input').val().trim();
            if (!message) return;

            $('#chat-box').append(`<div class="message user-msg">${message}</div>`);
            $('#user-input').val('');
            $('#chat-box').scrollTop($('#chat-box')[0].scrollHeight);

            $.post('/ChatBot/SendMessage', { message: message }, function (res) {
                try {
                    const data = JSON.parse(res.reply);
                    let html = '<div class="message bot-msg">';
                    data.forEach(p => {
                        html += `
                            <div class="product-card">
                                <img src="${p.image}" alt="${p.name}" />
                                <div class="product-name">${p.name}</div>
                                <div class="product-price">${p.price} ₫</div>
                            </div>
                        `;
                    });
                    html += '</div>';
                    $('#chat-box').append(html);
                } catch {
                    $('#chat-box').append(`<div class="message bot-msg">${res.reply}</div>`);
                }
                $('#chat-box').scrollTop($('#chat-box')[0].scrollHeight);
            });
        }
    </script>
}
