@model WebsiteNoiThat.Models.RegisterModel
@{
    ViewBag.Title = "Register";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Đăng ký | Khách hàng</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600&display=swap" rel="stylesheet" />
    <style>
        body {
            background: url('/Content/admin/img/noithat.jpg') no-repeat center center fixed;
            background-size: cover;
            font-family: 'Inter', sans-serif;
        }

        .overlay {
            background-color: rgba(0, 0, 0, 0.55);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .register-card {
            background: rgba(45, 45, 45, 0.8); /* Sang trọng */
            backdrop-filter: blur(20px);
            -webkit-backdrop-filter: blur(20px);
            border-radius: 20px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            padding: 40px;
            width: 100%;
            max-width: 420px;
            color: #fff;
            box-shadow: 0 10px 40px rgba(0, 0, 0, 0.4);
        }

        .register-header {
            font-size: 26px;
            font-weight: 600;
            margin-bottom: 24px;
            text-align: center;
        }

        .form-control {
            border-radius: 10px;
            padding: 12px;
            background-color: rgba(255, 255, 255, 0.9);
            color: #000;
            border: none;
        }

            .form-control::placeholder {
                color: #555;
            }

            .form-control:focus {
                box-shadow: none;
                border: 1px solid #000;
            }


        .btn-success {
            background-color: #28a745;
            border: none;
            border-radius: 10px;
            padding: 12px;
            font-weight: 600;
        }

            .btn-success:hover {
                background-color: #218838;
            }

        .text-danger {
            color: #ffcdd2 !important;
        }

        .text-link a {
            color: #fff;
            font-size: 14px;
            display: block;
            text-align: center;
            margin-top: 10px;
            text-decoration: underline;
        }
    </style>
</head>
<body>
    <div class="overlay">
        <div class="register-card">
            <div class="register-header">Tạo tài khoản mới</div>

            @using (Html.BeginForm("Register", "RegisterAndLogin", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                <div class="mb-3">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Tên đăng nhập", required = "required" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Mật khẩu", required = "required" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Nhập lại mật khẩu", required = "required" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Họ và tên", required = "required" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.TextAreaFor(m => m.Address, new { @class = "form-control", placeholder = "Địa chỉ", rows = 2, required = "required" })
                    @Html.ValidationMessageFor(m => m.Address, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Email", required = "required" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "Số điện thoại", required = "required" })
                    @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                </div>

                <div class="d-grid">
                    <button type="submit" class="btn btn-success">Đăng ký</button>
                </div>
            }

            <div class="text-link">
                <a href="/RegisterAndLogin/Login">Đã có tài khoản? Đăng nhập</a>
            </div>
        </div>
    </div>
</body>
</html>
